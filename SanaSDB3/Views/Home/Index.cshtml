@using SanaSDB3.Factories
@using SanaSDB3.Models.ViewModels;

@model TaskViewModel
@{
    ViewData["Title"] = "Home Page";
}

<h1>Task List</h1>

<form asp-action="ChangeStorageType" method="post" class="form-inline mb-4">
    <div class="form-group">
        <label for="storageType" class="mr-2">Select Storage Type:</label>
        <div id="storageType">
            @foreach (var storageType in Enum.GetValues(typeof(StorageType)))
            {
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="storageType" value="@storageType" onchange="this.form.submit()" 
                    @if (storageType.ToString() == Model.StorageTypeSelected.ToString())
                    {
                        <text>checked</text>
                    }
                    >
                    <label class="form-check-label" for="storageType">@storageType.ToString()</label>
                </div>
            }
        </div>
    </div>
</form>


<form asp-action="Create" method="post" class="form">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group col-4">
            <label asp-for="NewTask.Name" class="control-label"></label>
            <input asp-for="NewTask.Name" class="form-control" />
            <span asp-validation-for="NewTask.Name" class="text-danger"></span>
        </div>

        <div class="form-group col-2">
            <label asp-for="NewTask.DueDate" class="control-label"></label>
            <input asp-for="NewTask.DueDate" class="form-control" />
            <span asp-validation-for="NewTask.DueDate" class="text-danger"></span>
        </div>

        <div class="form-group col-2">
            <label asp-for="NewTask.CategoryId" class="control-label"></label>
            <select asp-for="NewTask.CategoryId" class="form-control">
                <option value=""></option>
                @foreach (var category in Model.CategoriesList)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>

        <div class="form-group col-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                Completed
            </th>
            <th>
                Name
            </th>
            <th>
                DueDate
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TaskList.Where(t => !t.Completed))
        {
            <tr>
                <td>
                    <form asp-action="TaskComplete" asp-route-id="@item.Id" method="post">
                        <input class="form-check-input" type="checkbox" onchange="this.form.submit()"
                        @if (item.Completed)
                        {
                            <text>checked</text>
                        }>
                        <label for="checkbox-@item.Id"></label>
                    </form>

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DueDate)
                </td>
                <td>
                    @if (item.CategoryId != null)
                    {
                        var category = @Model.CategoriesList?.FirstOrDefault(category => category.Id == item.CategoryId, null);
                        <span>@category?.Name</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit" style="font-size:25px;"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" type="submit"><i class="fa fa-close" style="font-size:25px; color:red;"></i></a>
                </td>
            </tr>
        }
    </tbody>
    <tbody class="completed-table">
        @foreach (var item in Model.TaskList.Where(t => t.Completed))
        {
            <tr class="completed-task">
                <td>
                    <form asp-action="TaskComplete" asp-route-id="@item.Id" method="post">
                        <input class="form-check-input" type="checkbox" onchange="this.form.submit()"
                        @if (item.Completed)
                        {
                            <text>checked</text>
                        }>
                        <label for="checkbox-@item.Id"></label>
                    </form>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DueDate)
                </td>
                <td>
                    @if (item.CategoryId != null)
                    {
                        var category = @Model.CategoriesList?.FirstOrDefault(category => category.Id == item.CategoryId, null);
                        <span>@category?.Name</span>
                    }

                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" style="font-size:25px;"><i class="fa fa-edit"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" type="submit"><i class="fa fa-close" style="font-size:25px; color:red;"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
